    '/browser/sammlungsstrategie',
    '/browser/collection-policy',
    '/browser/konservierungsrichtlinien',
    '/browser/preservation-policy',
    '/browser/datenschutzbestimmungen',
    '/browser/privacy-policy',
    '/browser/nutzungsbedingungen',
    '/browser/terms-of-use',
    '/browser/uber-arche',
    '/browser/about-arche',
    '/browser/technical-setup',
    '/browser/technischer-aufbau',
    '/browser/api-access',
    '/browser/api-zugriff',] %}
 
            {% if currentUrl is not empty and '/browser/discover' in currentUrl %}
                 {{ include( arche_theme_path ~ '/templates/layout/hero-no-search.html.twig' ) }}
            {% elseif  currentUrl in staticPagesArr  %}
                {{ include( arche_theme_path ~ '/templates/layout/hero-info-page.html.twig' ) }}
            {% else %}
                 {{ include( arche_theme_path ~ '/templates/layout/hero.html.twig' ) }}
            {% endif %}
        </div>
    </div>
</div>

