                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse arche-header-navbar" id="navbarNav">

                        {{ page.main_navigation }}

                    </div>
                </div>
            </nav>
            {% set currentUrl = path('<current>') %}
            {% set staticPagesArr = ['/browser/ressourcen-einreichen',
    '/browser/deposit-resources',
    '/browser/datenubergabevertrag',
