<main class="container-fluid cover pages-hero-section">

    <div class="row h-60">
        <div class="col-xl-4 col-lg-3 col-md-3 d-none d-md-block header-characters align-self-end">
        </div>

        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="text-center">
                <h1 class="section-header-title">{{ "Discover Resources"|trans }}</h1>
                <span class="hero-small-text">{{ "Browse the various resources on ARCHE"|trans }}
                </span>

            </div>
            <div class="pb-1 pt-2">
                <form class="d-flex" id="hero-smart-search-form">
                    <div class="input-group">
                        <input type="search" id="sm-hero-str" class="form-control hero-search-field" placeholder="{{ "Find resources"|trans }}..." aria-label="Search">
                        <button class="smartsearch-btn btn hero-search-button" type="submit"><img class="img-fluid" src="{{ base_path ~ directory }}/images/common/search_icon.svg" alt="Search"  /></button>
                    </div>
                </form>

            </div>
            <div class="hero-home-logos">
                <a href="https://doi.org/10.34894/SNEQ7T" target="_blank"><img src="{{ base_path ~ directory }}/images/partner-logos/core_trust_seal_64.png" height="32px" alt="Core Trust Seal" /></a>
                <a href="https://doi.org/10.34733/doc-105" target="_blank"><img src="{{ base_path ~ directory }}/images/partner-logos/clarin_b_centre_72.png"  height="32px" alt="CLARIN B-centre" /></a>
            </div>
        </div>

        <div class="col-xl-4 col-lg-3 col-md-3 d-none d-md-block header-characters align-self-end">
        </div>
    </div>
</main>
